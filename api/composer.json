{
  "name": "carrevolutis/apply-api",
  "description": "Slim API for applying to offers",
  "type": "project",
  "require": {
    "php": "^8.1",
    "slim/slim": "^4.10",
    "slim/psr7": "^1.6",
    "monolog/monolog": "^3.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.4"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "start": "php -S 0.0.0.0:8080 -t public public/index.php",
    "test": "phpunit --colors=always"
  }
}
